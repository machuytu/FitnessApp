<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Goal"
        android:id="@+id/textView1"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary"
        android:text="Steps"
        android:id="@+id/textView2"
        android:layout_below="@id/textView1"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"/>

    <EditText
        android:layout_width="70dp"
        android:id="@+id/et1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:inputType="phone"
        android:textSize="25sp"
        android:layout_toEndOf="@+id/textView2"
        android:layout_below="@id/textView1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary"
        android:text="Calories"
        android:id="@+id/textView3"
        android:layout_below="@id/textView2"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"/>

    <EditText
        android:layout_width="70dp"
        android:id="@+id/et2"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@id/textView3"
        android:inputType="phone"
        android:layout_below="@id/textView2"/>

    <Button
        android:id="@+id/setgoal"
        android:layout_width="102dp"
        android:layout_height="58dp"
        android:layout_marginTop="30sp"
        android:layout_below="@+id/et2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/green"
        android:text="Set"
        android:textSize="18sp"
        android:textColor="@color/white" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="320dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardgoal"
        card_view:cardCornerRadius="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:clickable="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:src="@drawable/appintro4"
                android:id="@+id/cardgoalsteps"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steps"
                android:layout_marginStart="15dp"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:layout_toEndOf="@+id/cardgoalsteps"
                android:layout_marginTop="5dp"
                android:id="@+id/fact1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fact1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="10dp"
                android:gravity="center|left"
                android:layout_toRightOf="@+id/cardgoalsteps"
                android:text="Average person should take at least 10,000 steps per day to maintain good health, which is equal to about 5 miles of walking"
                android:textSize="14sp"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardgoal2"
        card_view:cardCornerRadius="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:layout_below="@+id/cardgoal"
        android:clickable="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:src="@drawable/food"
                android:id="@+id/cardgoalfood"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                android:layout_marginStart="15dp"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:layout_toEndOf="@+id/cardgoalfood"
                android:layout_marginTop="5dp"
                android:id="@+id/fact2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fact2"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="3dp"
                android:layout_marginTop="10dp"
                android:gravity="center|left"
                android:layout_toRightOf="@+id/cardgoalfood"
                android:text="Average Daily Intake of Kilocalories recommended is about 1800 to 2600 kcals"
                tools:ignore="RtlHardcoded"
                android:textSize="14sp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>